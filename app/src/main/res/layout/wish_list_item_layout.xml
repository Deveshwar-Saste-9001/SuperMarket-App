<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="1.0dip"
    android:background="#ffffffff">

    <ImageView
        android:id="@+id/product_image_wish1"
        android:layout_width="100.0dip"
        android:layout_height="100.0dip"
        android:layout_marginStart="16.0dip"
        android:layout_marginTop="16.0dip"
        android:layout_marginBottom="16.0dip"
        android:src="@drawable/books"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/product_title_wish1"
        android:layout_width="0.0dip"
        android:layout_height="wrap_content"
        android:layout_marginStart="16.0dip"
        android:layout_marginTop="16.0dip"
        android:layout_marginEnd="16.0dip"
        android:text="hay fiber bisciut"
        android:textColor="#ff000000"
        android:textSize="16.0sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/product_image_wish1"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/coupen_icon_wish1"
        android:layout_width="15.0dip"
        android:layout_height="15.0dip"
        android:tint="#ff8000ff"
        app:layout_constraintBottom_toBottomOf="@id/free_coupen_wish1"
        app:layout_constraintStart_toStartOf="@id/product_title_wish1"
        app:layout_constraintTop_toTopOf="@id/free_coupen_wish1"
        app:srcCompat="@drawable/ic_loyalty_black_24dp" />

    <TextView
        android:id="@+id/free_coupen_wish1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Free coupens"
        android:textColor="#ff8000ff"
        android:textSize="12.0sp"
        app:layout_constraintStart_toEndOf="@id/coupen_icon_wish1"
        app:layout_constraintTop_toBottomOf="@id/product_title_wish1" />

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16.0dip"
        android:layout_marginTop="8.0dip"
        android:background="@drawable/slider_background"
        android:backgroundTint="#ff00a00f"
        android:visibility="gone"
        android:elevation="3.0dip"
        android:orientation="horizontal"
        android:padding="1.0dip"
        app:layout_constraintStart_toEndOf="@id/product_image_wish1"
        app:layout_constraintTop_toBottomOf="@id/free_coupen_wish1">

        <TextView
            android:id="@+id/tv_product_rating_miniView_wish1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="2.0dip"
            android:layout_marginEnd="2.0dip"
            android:text="4.5"
            android:textColor="@android:color/white"
            android:textSize="12.0sp"
            android:textStyle="bold" />

        <ImageView
            android:layout_width="10.0dip"
            android:layout_height="10.0dip"
            android:layout_gravity="center"
            android:layout_marginStart="2.0dip"
            android:layout_marginEnd="2.0dip"
            android:src="@drawable/ic_star_black_24dp" />
    </LinearLayout>

    <TextView
        android:id="@+id/total_rating_wish1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8.0dip"
        android:text="(27)rating"
        android:visibility="gone"
        android:textSize="10.0sp"
        app:layout_constraintBottom_toBottomOf="@id/linearLayout1"
        app:layout_constraintStart_toEndOf="@id/linearLayout1" />

    <TextView
        android:id="@+id/product_price_wish1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16.0dip"
        android:layout_marginTop="8.0dip"
        android:text="Rs. 10/-"
        android:textColor="#ff000000"
        android:textSize="20.0sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@id/product_image_wish1"
        app:layout_constraintTop_toBottomOf="@id/linearLayout1" />

    <TextView
        android:id="@+id/cutted_price_wish1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8.0dip"
        android:text="Rs. 15/-"
        android:textSize="12.0sp"
        app:layout_constraintBottom_toBottomOf="@id/product_price_wish1"
        app:layout_constraintStart_toEndOf="@id/product_price_wish1" />

    <TextView
        android:id="@+id/payment_method_wish1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16.0dip"
        android:text="cash on delivery avalable"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@id/product_price_wish1"
        app:layout_constraintTop_toBottomOf="@id/product_price_wish1" />

    <ImageButton
        android:id="@+id/delete_btn_wish1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8.0dip"
        android:layout_marginEnd="8.0dip"
        android:layout_marginBottom="8.0dip"
        android:background="#ffffffff"
        android:padding="8.0dip"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_delete_black_24dp" />

    <View
        android:id="@+id/pricecut_wish1"
        android:layout_width="0.0dip"
        android:layout_height="1.0dip"
        android:background="#ff505050"
        app:layout_constraintBottom_toBottomOf="@id/cutted_price_wish1"
        app:layout_constraintEnd_toEndOf="@id/cutted_price_wish1"
        app:layout_constraintStart_toStartOf="@id/cutted_price_wish1"
        app:layout_constraintTop_toTopOf="@id/cutted_price_wish1" />
</androidx.constraintlayout.widget.ConstraintLayout>