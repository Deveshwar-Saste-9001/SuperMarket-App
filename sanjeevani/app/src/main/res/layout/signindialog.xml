<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:background="@drawable/buttons"
    android:backgroundTint="#ffffff"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="100.0dip"
        android:layout_height="100.0dip"
        android:layout_marginStart="16.0dip"
        android:layout_marginTop="16.0dip"
        android:layout_marginEnd="16.0dip"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_input_black_24dp" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16.0dip"
        android:layout_marginTop="8.0dip"
        android:layout_marginEnd="16.0dip"
        android:text="You are Not Login, just few step Away"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/imageView1" />

    <LinearLayout
        android:id="@+id/linearLayout101"
        android:layout_width="0.0dip"
        android:layout_height="wrap_content"
        android:layout_marginTop="8.0dip"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textView1">

        <Button
            android:id="@+id/sign_in_dialogbtn1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:background="@android:color/transparent"
            android:stateListAnimator="@null"
            android:text="Sign In"
            android:textAllCaps="false"
            android:textColor="@color/colorPrimary"
            android:textSize="18.0sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/sign_up_dialogbtn1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:background="@android:color/transparent"
            android:stateListAnimator="@null"
            android:text="Sign Up"
            android:textAllCaps="false"
            android:textColor="@color/colorPrimary"
            android:textSize="18.0sp"
            android:textStyle="bold" />
    </LinearLayout>

    <View
        android:id="@+id/divider151"
        android:layout_width="0.0dip"
        android:layout_height="1.0dip"
        android:layout_marginStart="16.0dip"
        android:layout_marginTop="8.0dip"
        android:layout_marginEnd="16.0dip"
        android:background="@color/RecyclerViewBack"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textView1" />

    <View
        android:id="@+id/divider161"
        android:layout_width="1.0dip"
        android:layout_height="0.0dip"
        android:background="@color/RecyclerViewBack"
        app:layout_constraintBottom_toBottomOf="@id/linearLayout101"
        app:layout_constraintEnd_toEndOf="@id/linearLayout101"
        app:layout_constraintStart_toStartOf="@id/linearLayout101"
        app:layout_constraintTop_toTopOf="@id/linearLayout101" />
</androidx.constraintlayout.widget.ConstraintLayout>