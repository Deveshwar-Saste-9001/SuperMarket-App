<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="16.0dip"
    android:layout_marginEnd="16.0dip"
    android:background="@drawable/buttons"
    android:backgroundTint="#ffffffff"
    android:elevation="4.0dip">

    <TextView
        android:id="@+id/recent_orders_title_acc2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16.0dip"
        android:layout_marginTop="8.0dip"
        android:text="Your recent order"
        android:textColor="#ff000000"
        android:textSize="16.0sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/recent_order_container_acc1"
        android:layout_width="0.0dip"
        android:layout_height="wrap_content"
        android:layout_marginStart="16.0dip"
        android:layout_marginTop="8.0dip"
        android:layout_marginEnd="16.0dip"
        android:layout_marginBottom="16.0dip"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/recent_orders_title_acc2">

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="70.0dip"
            android:layout_height="70.0dip"
            android:layout_weight="1.0"
            android:src="@drawable/books"
            app:civ_border_color="@color/colorPrimaryDark"
            app:civ_border_width="4.0dip" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="70.0dip"
            android:layout_height="70.0dip"
            android:layout_weight="1.0"
            android:src="@drawable/books"
            app:civ_border_color="@color/colorPrimaryDark"
            app:civ_border_width="4.0dip" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="70.0dip"
            android:layout_height="70.0dip"
            android:layout_weight="1.0"
            android:src="@drawable/books"
            app:civ_border_color="@color/colorPrimaryDark"
            app:civ_border_width="4.0dip" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="70.0dip"
            android:layout_height="70.0dip"
            android:layout_weight="1.0"
            android:src="@drawable/books"
            app:civ_border_color="@color/colorPrimaryDark"
            app:civ_border_width="4.0dip" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>